{% set pronunciationRuleSetsOptions = settings['pronunciationRuleSets'] ?? [
    { label: 'Language 1', value: 'language1' },
    { label: 'Language 2', value: 'language2' },
    { label: 'Language 3', value: 'language3' },
    { label: 'Language 4', value: 'language4' },
